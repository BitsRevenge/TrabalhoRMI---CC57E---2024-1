<TelaRegistrar>
    name: "registrar"
    FloatLayout:
        id: registrar
        orinetation: "vertical"


        MDLabel:
            text: "Registrar"
            font_style: "H5"
            bold: True
            halign: "center"
            pos_hint: {"center_x": 0.5, "center_y": 0.7}

        MDTextField:
            id: nome
            hint_text: "Nome"
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            size_hint_x: 0.7
            icon_right: "account"
            icon_right_color: app.theme_cls.primary_color

        MDTextField:
            id: email
            hint_text: "Email"
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint_x: 0.7
            icon_right: "email"
            icon_right_color: app.theme_cls.primary_color

        MDTextField:
            id: senha
            hint_text: "Senha"
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            size_hint_x: 0.7
            password: True
            icon_right: "lock"
            icon_right_color: app.theme_cls.primary_color

        MDRaisedButton:
            text: "Registrar"
            elevation: 0
            pos_hint: {"center_x": 0.5, "center_y": 0.3}
            on_release: root.connect()

        MDTextButton:
            text: "Voltar"
            elevation: 0
            pos_hint: {"center_x": 0.5, "center_y": 0.1}
            on_release:
                root.manager.transition.direction = "right"
                root.manager.current = "login"

        MDIconButton:
            icon: "moon-waning-crescent"
            pos_hint: {"center_x": 0.2, "center_y": 0.9}
            on_release: app.tema_dark()

        MDIconButton:
            icon: "weather-sunny"
            pos_hint: {"center_x": 0.8, "center_y": 0.9}
            on_release: app.tema_light()
