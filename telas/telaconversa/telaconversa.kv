<TelaConversa>
    name: "conversa"

    FloatLayout:
        ScrollView:
            id: telas
            MDList:
                id: listagem
        MDTopAppBar:
            icon: "account-badge"
            elevation:0
            type: "top"
            pos_hint: {"center_y": 0.95}
            right_action_items:[["home", lambda x: app.set_peesoa_off(), "Home"], ["account-badge", lambda x: root.tela_pessoas(), "Pessoas Online"],["account-group", lambda x: root.tela_grupos(), "Grupos"]]


        MDCard:
            size_hint: None, None
            size: "300dp", "60dp"
            elevation: 0
            BoxLayout:
                padding: dp(25)
                MDTextField:
                    id: send
                    pos_hint: {"center_x": 0.4, "center_y": 0.1}
                    size_hint_x: 0.6
                    icon_right_color: app.theme_cls.primary_color

                MDIconButton:
                    icon: "send"
                    pos_hint: {"center_x": 0.8, "center_y": 0.05}
                    on_release:
                        root.send_message()
                        app.send_message_chat_privado()

                MDIconButton:
                    icon: "paperclip"
                    pos_hint: {"center_x": 0.9, "center_y": 0.05}
                    on_release:
                        app.show_file_chooser()


